<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-container">
        <% if (user) { %>
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <img src="/img/nyrp-logo.png" alt="NYRP Logo" class="sidebar-logo">
                <h3>NYRP Staff</h3>
            </div>
            
            <div class="sidebar-user">
                <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>" class="user-avatar">
                <div class="user-info">
                    <h4><%= user.username %></h4>
                    <span class="user-role"><%= user.staffInfo?.position || 'Staff Member' %></span>
                </div>
            </div>
            
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a href="/dashboard" class="<%= title.includes('Dashboard') ? 'active' : '' %>">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/activity" class="<%= title.includes('Activity') ? 'active' : '' %>">
                            <i class="bi bi-graph-up"></i> My Activity
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/profile/<%= user.id %>" class="<%= title.includes('Profile') && title.includes(user.username) ? 'active' : '' %>">
                            <i class="bi bi-person-circle"></i> My Profile
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/staff" class="<%= title.includes('Staff Management') ? 'active' : '' %>">
                            <i class="bi bi-people-fill"></i> Staff Management
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/reports" class="<%= title.includes('Reports') ? 'active' : '' %>">
                            <i class="bi bi-file-earmark-text"></i> Reports
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/settings" class="<%= title.includes('Settings') ? 'active' : '' %>">
                            <i class="bi bi-gear-fill"></i> Settings
                        </a>
                    </li>
                </ul>
            </nav>
            
            <div class="sidebar-footer">
                <a href="/auth/logout" class="logout-btn">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="main-content">
            <header class="content-header">
                <div class="header-left">
                    <button id="sidebar-toggle" class="sidebar-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <h2 class="page-title"><%= title.split(' - ')[0] %></h2>
                </div>
                
                <div class="header-right">
                    <div class="dropdown">
                        <button class="notification-btn" id="notificationDropdown" data-bs-toggle="dropdown">
                            <i class="bi bi-bell"></i>
                            <span class="notification-badge">3</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                            <li class="dropdown-header">Notifications</li>
                            <li><a class="dropdown-item" href="#">New staff activity report</a></li>
                            <li><a class="dropdown-item" href="#">Weekly summary available</a></li>
                            <li><a class="dropdown-item" href="#">Staff meeting reminder</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center" href="#">View all</a></li>
                        </ul>
                    </div>
                    
                    <div class="dropdown">
                        <button class="user-menu-btn" id="userMenuDropdown" data-bs-toggle="dropdown">
                            <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>" class="user-avatar-sm">
                            <span class="user-name"><%= user.username %></span>
                            <i class="bi bi-chevron-down"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuDropdown">
                            <li><a class="dropdown-item" href="/dashboard/profile/<%= user.id %>"><i class="bi bi-person me-2"></i>My Profile</a></li>
                            <li><a class="dropdown-item" href="/dashboard/settings"><i class="bi bi-gear me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                        </ul>
                    </div>
                </div>
            </header>
            
            <div class="content-body">
                <% if (typeof body !== 'undefined') { %>
                    <%- body %>
                <% } %>
            </div>
            
            <footer class="content-footer">
                <p>&copy; <%= new Date().getFullYear() %> New York Roleplay. All rights reserved.</p>
            </footer>
        </main>
        <% } else { %>
        <!-- Auth Layout -->
        <div class="auth-container">
            <% if (typeof body !== 'undefined') { %>
                <%- body %>
            <% } %>
        </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html> 