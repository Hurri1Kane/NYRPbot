<%- include('../layouts/main', { title: title, user: user, body: `
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Dashboard</h1>
        <div>
            <a href="/dashboard/servers" class="btn btn-primary">
                <i class="bi bi-server"></i> Manage Servers
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Your Servers</h5>
                </div>
                <div class="card-body">
                    <% if (user && user.guilds && user.guilds.length > 0) { %>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% 
                            // Filter guilds where user has admin permissions
                            const adminGuilds = user.guilds.filter(guild => {
                                return (guild.permissions & 0x8) === 0x8;
                            }).slice(0, 4); // Show only first 4
                            
                            adminGuilds.forEach(guild => { %>
                                <div class="col">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= guild.name %></h5>
                                            <a href="/dashboard/servers/<%= guild.id %>" class="btn btn-sm btn-outline-primary">Manage</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                        <% if (user.guilds.filter(guild => (guild.permissions & 0x8) === 0x8).length > 4) { %>
                            <div class="text-center mt-3">
                                <a href="/dashboard/servers" class="btn btn-outline-primary">View All Servers</a>
                            </div>
                        <% } %>
                    <% } else { %>
                        <p class="text-center">You don't have any servers where you have admin permissions.</p>
                        <div class="text-center">
                            <a href="https://discord.com/oauth2/authorize?client_id=YOUR_CLIENT_ID&scope=bot&permissions=8" class="btn btn-primary" target="_blank">
                                Add Bot to Server
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">Quick Stats</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Servers:</span>
                        <span class="badge bg-primary rounded-pill"><%= user.guilds ? user.guilds.length : 0 %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Manageable:</span>
                        <span class="badge bg-success rounded-pill">
                            <%= user.guilds ? user.guilds.filter(g => (g.permissions & 0x8) === 0x8).length : 0 %>
                        </span>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">Quick Links</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/dashboard/settings" class="list-group-item list-group-item-action">
                            <i class="bi bi-gear me-2"></i> Settings
                        </a>
                        <a href="https://discord.com/oauth2/authorize?client_id=YOUR_CLIENT_ID&scope=bot&permissions=8" class="list-group-item list-group-item-action" target="_blank">
                            <i class="bi bi-plus-circle me-2"></i> Add Bot to Server
                        </a>
                        <a href="https://github.com/yourusername/nyrp-bot" class="list-group-item list-group-item-action" target="_blank">
                            <i class="bi bi-github me-2"></i> GitHub Repository
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
` }) %> 